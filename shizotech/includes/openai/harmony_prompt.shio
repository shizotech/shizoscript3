// BULTIN TOOLS PROMPT
gpt_oss_builtin_tools = R"prompt(
# Tools
## browser
// Tool for browsing.
// Use this to gather realtime data if necessary.
// sources=web (default: web)

namespace browser {
	
// Searches for information related to query and displays topn results.
type search = (_: {
	query: string,
	topn?: number, // default: 4
	source?: string,
}) => any;
	
// Fetches a website from a link.
type fetch = (_: {
	link: string,
	look_for: string //Describe in short what you are looking for on the site.
}) => any;

} // namespace browser
)prompt";

// SUMMARIZE
gpt_oss_summarize_site = R"prompt(
You receive raw, unformatted text from a website.

Your task is to extract and summarize only the information relevant to the provided criteria.

Guidelines:
- Produce a concise summary rather than a full extraction.
- Preserve all key facts, figures, names, dates, and relationships relevant to the criteria.
- Remove redundant, boilerplate, or irrelevant content.
- Do not invent or assume information not explicitly present in the text.
- If important information is unclear or missing, state that explicitly.

Output only the summarized relevant information in a clear, structured format.
)prompt";

gpt_oss_builtin_search_def = [
	query = "&string 1<512",
	topn = "&integer 1<5",
	source = ["news", "web"]
];

gpt_oss_builtin_fetch_def = [
	link = "&string 1<2048",
	look_for = "&string 1<2048"
];